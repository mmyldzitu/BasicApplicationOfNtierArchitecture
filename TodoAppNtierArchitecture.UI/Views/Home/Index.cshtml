@model List<WorkListDto>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>TODO APP</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    
    <div class="container my-2">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>İş</th>
                    <th>Durum</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Definition</td>
                        <td>@(item.isCompleted? "Tamamlandı" : "Tamamlanmadı")</td>
                        <td><a asp-action="Update"  asp-controller="Home" asp-route-id="@item.Id" class=" btn btn-outline-success">Güncelle</a></td>
                        <td><a asp-action="Remove"  asp-controller="Home" asp-route-id="@item.Id" class=" btn btn-outline-warning">Sil</a></td>
                    </tr>
                }

            </tbody>

        </table>
        <div class="text-end my-2">
            <a asp-action="Create" asp-controller="Home" class="btn btn-outline-primary">Yeni İş Ekle</a>
        </div>
    </div>
    
</body>
</html>